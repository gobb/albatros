{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'attributes'|trans() }}</h1>
</div>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ entity.code }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Attributevalues</th>
            <td>
            	<ul>
            	{% for attributevalue in entity.attributevalues %}
            	<li>
            		{{ attributevalue.name }}
            		<a href="{{ path('aripd_admin_store_attributevalue_show', { id: attributevalue.id }) }}">show</a>
            		<a href="{{ path('aripd_admin_store_attributevalue_edit', { id: attributevalue.id }) }}">edit</a>
            	</li>
            	{% endfor %}
            	<li>
            		<a href="{{ path('aripd_admin_store_attributevalue_new') }}">new</a>
            	</li>
            	</ul>
            </td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('aripd_admin_store_attributekey_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('aripd_admin_store_attributekey_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('aripd_admin_store_attributekey_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}