{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'Payments'|trans({}, 'ARIPDShoppingBundle') }}</h1>
</div>
<form action="{{ path('aripd_admin_shopping_payment_create', { paymentgroup_id: paymentgroup.id }) }}" method="post" {{ form_enctype(form) }}>
	{{ form_widget(form) }}
	<div class="form-actions">
		<a class="btn" href="{{ path('aripd_admin_shopping_paymentgroup_show', { id: paymentgroup.id }) }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
		<button class="btn btn-primary" data-loading-text="{{ 'Loading...'|trans() }}" type="submit">{{ 'Create'|trans() }}</button>
	</div>
</form>
{% endblock %}