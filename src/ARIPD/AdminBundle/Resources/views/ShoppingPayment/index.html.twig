{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'Payments'|trans({}, 'ARIPDShoppingBundle') }}</h1>
</div>
<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>payment</th>
			<th>paymenttype</th>
			<th>Content</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	{% for entity in entities %}
	<tr class="{% if false == entity.active %}error{% endif %}">
		<td>
			<div class="span2">
				<img src="{{ image(entity.getWebPath()).resize(300, 300, 'transparent').png }}" />
			</div>
		</td>
		<td>{{ entity.name }}</td>
		<td>{{ entity.paymenttype.name }}</td>
		<td>{{ entity.content|raw }}</td>
		<td>
			<div class="btn-group">
				<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog"></i></a>
				<ul class="dropdown-menu pull-right">
					<li><a href="{{ path('aripd_admin_shopping_payment_show', { id: entity.id }) }}"><i class="icon-pencil"></i> {{ 'Show'|trans() }}</a></li>
					<li><a href="{{ path('aripd_admin_shopping_payment_edit', { id: entity.id }) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a></li>
					<li><a href="{{ path('aripd_admin_shopping_payment_delete', { id: entity.id }) }}"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</a></li>
				</ul>
			</div>
		</td>
	</tr>
	{% endfor %}
	</tbody>
</table>
<div class="form-actions">
	<a class="btn" href="{{ path('aripd_admin_shopping_payment_new') }}">{{ 'New entry'|trans() }}</a>
</div>
{% endblock %}