{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'subtopics'|trans() }}</h1>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Konu</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	{% for entity in entities %}
	<tr>
		<td>{{ entity.name }}</td>
		<td>
			<div class="btn-group">
				<a class="btn btn-mini" href="{{ path('aripd_admin_cms_subtopic_show', {id: entity.id}) }}">{{ 'Show'|trans() }}</a>
				<a class="btn btn-mini" href="{{ path('aripd_admin_cms_subtopic_edit', {id: entity.id}) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a>
			</div>
		</td>
	</tr>
	{% endfor %}
	</tbody>
</table>
<div class="form-actions">
	<a class="btn" href="{{ path('aripd_admin_cms_subtopic_new') }}">{{ 'New entry'|trans() }}</a>
</div>
{% endblock %}