{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'Pages'|trans({}, 'ARIPDCMSBundle') }}</h1>
</div>
<form action="{{ path('aripd_admin_cms_page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	{{ form_row(edit_form.name, {attr: {class: 'span9'}}) }}
	{{ form_row(edit_form.description, {attr: {class: 'span9'}}) }}
	{{ form_row(edit_form.content, {attr: {class: 'redactor span9'}}) }}
	{{ form_rest(edit_form) }}
	<div class="form-actions">
		<button class="btn btn-primary" data-loading-text="{{ 'Loading...'|trans() }}" type="submit">Kaydet</button>
	</div>
</form>
{% endblock %}