{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<ul class="breadcrumb">
	<li><a href="{{ path('aripd_admin_default_index') }}">{{ 'Dashboard'|trans({}, 'ARIPDAdminBundle') }}</a> <span class="divider">/</span></li>
	<li class="active">{{ 'Customer Relationship Management'|trans({}, 'ARIPDCRMBundle') }} <span class="divider">/</span></li>
	<li><a href="{{ path('aripd_admin_crm_tagkey_index') }}">{{ 'tagkeys'|trans() }}</a> <span class="divider">/</span></li>
	<li class="active">{{ entity.name }}</li>
</ul>
<table class="table table-striped table-hover">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>{{ 'Sorting'|trans({}, 'ARIPDCRMBundle') }}</th>
			<td>{{ entity.sorting }}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{ entity.name }}</td>
		</tr>
	</tbody>
</table>
<form action="{{ path('aripd_admin_crm_tagkey_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
	<div class="form-actions">
		<a class="btn" href="{{ path('aripd_admin_crm_tagkey_index') }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
		<a class="btn" href="{{ path('aripd_admin_crm_tagkey_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a>
		<button class="btn btn-danger" type="submit"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</button>
	</div>
</form>
{% endblock %}