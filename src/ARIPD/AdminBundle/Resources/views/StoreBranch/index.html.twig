{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'Branches'|trans({}, 'ARIPDStoreBundle') }}</h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in pagination %}
		<tr>
			<td>
				<img width="280" height="240" src="http://maps.googleapis.com/maps/api/staticmap?center={{ entity.latitude }},{{ entity.longitude }}&markers=size:mid%7Ccolor:0x40ad36%7Clabel:S%7C{{ entity.latitude }},{{ entity.longitude }}&zoom=15&size=280x240&sensor=false" />
			</td>
			<td>{{ entity.name }}</td>
			<td>
				<div class="btn-group">
					<a class="btn btn-mini" href="{{ path('aripd_admin_store_branch_show', { 'id': entity.id }) }}">{{ 'Show'|trans() }}</a>
					<a class="btn btn-mini" href="{{ path('aripd_admin_store_branch_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a>
				</div>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<div class="navigation">{{ knp_pagination_render(pagination) }}</div>
<div class="form-actions">
	<a class="btn" href="{{ path('aripd_admin_store_branch_new') }}">{{ 'New entry'|trans() }}</a>
</div>
{% endblock %}