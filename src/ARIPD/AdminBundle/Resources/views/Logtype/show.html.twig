{% extends "ARIPDAdminBundle::layout.html.twig" %}

{% block container %}
<div class="page-header">
	<h1>{{ 'logtypes'|trans() }}</h1>
</div>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ entity.code }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Bonus</th>
            <td>{{ entity.bonus }}</td>
        </tr>
        <tr>
            <th>Sendemail</th>
            <td>{{ entity.sendemail }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('aripd_admin_logtype_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('aripd_admin_logtype_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('aripd_admin_logtype_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}