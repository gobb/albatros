{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'Banners'|trans({}, 'ARIPDStoreBundle') }}</h1>
</div>
<img src="{{ entity.url }}">
<form action="{{ path('aripd_admin_store_banner_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	{{ form_row(edit_form.name, {attr: {class: 'span9'}}) }}
	{{ form_row(edit_form.description, {attr: {class: 'span9'}}) }}
	{{ form_row(edit_form.href, {attr: {class: 'span9'}}) }}
	{{ form_row(edit_form.url, {attr: {class: 'span9'}}) }}
	{{ form_rest(edit_form) }}
	<div class="form-actions">
		<a class="btn" href="{{ path('aripd_admin_store_banner_index') }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
		<button class="btn btn-danger" type="button" onclick="deleteRecord();"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</button>
		<button class="btn btn-primary" data-loading-text="{{ 'Loading...'|trans() }}" type="submit"><i class="icon-ok"></i> {{ 'Save'|trans() }}</button>
	</div>
</form>
<form id="delete_form" action="{{ path('aripd_admin_store_banner_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>
{% endblock %}