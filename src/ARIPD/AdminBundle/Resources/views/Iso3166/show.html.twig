{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'iso3166'|trans() }}</h1>
</div>
<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Native</th>
            <td>{{ entity.native }}</td>
        </tr>
        <tr>
            <th>An</th>
            <td>{{ entity.an }}</td>
        </tr>
        <tr>
            <th>A2</th>
            <td>{{ entity.a2 }}</td>
        </tr>
        <tr>
            <th>A3</th>
            <td>{{ entity.a3 }}</td>
        </tr>
        <tr>
            <th>Phone code</th>
            <td>{{ entity.phonecode }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ entity.active }}</td>
        </tr>
    </tbody>
</table>

<div class="form-actions">
	<a class="btn" href="{{ path('aripd_admin_iso3166_index') }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
	<a class="btn" href="{{ path('aripd_admin_iso3166_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a>
	<button class="btn btn-danger" type="button" onclick="deleteRecord();"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</button>
</div>

<form id="delete_form" action="{{ path('aripd_admin_iso3166_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>
{% endblock %}