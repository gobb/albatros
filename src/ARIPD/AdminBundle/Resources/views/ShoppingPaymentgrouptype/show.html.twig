{% extends 'ARIPDAdminBundle::layout.html.twig' %}

{% block container %}
<div class="page-header">
	<h1>{{ 'paymentgrouptypes'|trans() }}</h1>
</div>
<table class="table">
	<tbody>
		<tr>
			<th></th>
			<td><div class="span2"><img class="thumbnail" src="{{ image(entity.getWebPath()) }}"/></div></td>
		</tr>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{ entity.name }}</td>
		</tr>
	</tbody>
</table>
<div class="form-actions">
	<a class="btn" href="{{ path('aripd_admin_shopping_paymentgrouptype_index') }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
	<a class="btn" href="{{ path('aripd_admin_shopping_paymentgrouptype_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> {{ 'Edit'|trans() }}</a>
	<button class="btn btn-danger" type="button" onclick="deleteRecord();"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</button>
</div>
<form id="delete_form" action="{{ path('aripd_admin_shopping_paymentgrouptype_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>
{% endblock %}