{% extends 'ARIPDMobileBundle::layout.html.twig' %}

{% block body %}
<div data-role="page" id="foo" data-title="Page Foo">
	<div data-role="header" data-id="header" data-position="fixed">
		<a data-rel="back" data-icon="arrow-l">Back</a>
		<h1>{{ 'Postal Address'|trans({}, 'ARIPDUserBundle') }}</h1>
		{% include 'ARIPDMobileBundle:Default:loginout.html.twig' %}
	</div>
	<div data-role="content">
		<form action="{{ path('aripd_mobile_user_postaladdress_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
			{{ form_widget(edit_form) }}
			<div class="form-actions">
				<a class="btn" href="{{ path('aripd_mobile_user_postaladdress_index') }}"><i class="icon-chevron-left"></i> {{ 'Back'|trans() }}</a>
				<a class="btn btn-danger" href="{{ path('aripd_mobile_user_postaladdress_delete', { 'id': entity.id }) }}"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</a>
				<button class="btn btn-primary" data-loading-text="{{ 'Loading...'|trans() }}" type="submit"><i class="icon-ok"></i> {{ 'Save'|trans() }}</button>
			</div>
		</form>
		<form action="{{ path('aripd_mobile_user_postaladdress_delete', { 'id': entity.id }) }}" method="post">
			{{ form_widget(delete_form) }}
			<button class="btn btn-danger" type="submit"><i class="icon-trash"></i> {{ 'Delete'|trans() }}</button>
		</form>
	</div>
	<div data-role="footer" data-id="footer" data-position="fixed">
		<a href="{{ path('aripd_mobile_user_postaladdress_new') }}">Yeni kayÄ±t</a>
	</div>
</div>
{% endblock %}