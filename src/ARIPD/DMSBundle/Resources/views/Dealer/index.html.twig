		"sAjaxSource": "{{ path('aripd_admin_dmsdealer_data') }}",
		"aoColumns": [
						{ "mData": "id" },
						{ "mData": "name" },
		],
		"fnRowCallback": function( nRow, aData, iDisplayIndex ) {
			//$('td:eq(1)', nRow).html(aData.createdAt);
		},
		"sDom": "<'row'<'span3'l><'span6'f>r>t<'row'<'span3'i><'span6'p>>",
